{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "declaration": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "sourceMap": true,
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "./__tests__/**/*",
    "src/validators",
    "packages"
  ]
}
